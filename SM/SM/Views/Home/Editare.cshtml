
@{
    Layout = null;
}
<script src="~/Scripts/saver.js"></script>
<input type="file" id="browse" style="display:none" accept="image/*">
<div id="images" style="display:none">
    
</div>
    <div class="row" id="edit">
        <div class="col-3">
            <div align="center" style="margin-top:35px;">
                <canvas id="histcanvas" width="255" height="100" style="border:solid"></canvas>
            </div>
        </div>
        <div class="col-1">
            <div class="row">
                <div class="col-12">
                    <i class="fa fa-sun-o panel-icon" id="bright" aria-hidden="true">
                    </i>
                    <br />
                    <input type="text" style="width:50%; height:20px" id="brightScale">
                </div>
                <div class="col-12">
                    <i class="fa fa-adjust panel-icon" style="font-size:29px !important" id="contrast" aria-hidden="true">
                    </i>
                    <br />
                    <input type="text" style="width:50%; height:20px" id="contrastScale">
                </div>
                <div class="col-12">
                    <i class="fa fa-tint panel-icon" style="font-size:32px !important; margin-left:3px" id="saturation"></i>
                    <br />
                    <input type="text" style="width:50%; height:20px" id="saturationScale">
                </div>
                <div class="col-12">
                    <br />
                    <i class="fa fa-bar-chart panel-icon" id="histogram" style="font-size:32px !important; margin-left:3px"></i>
                </div>
            </div>
        </div>
        <div class="col-4 window-edit" id="window-edit">

        </div>
        <div class="col-1">
            <div class="pull-right">
                <div class="col-12">
                    <i class="fa fa-undo panel-icon" id="undo" aria-hidden="true"></i>
                    <br />
                </div>
                <div class="col-12">
                    <i class="fa fa-eye-slash panel-icon" id="black-and-white"></i>
                    <br />
                </div>
                <div class="col-12">
                    <i class="fa fa-star-half-o panel-icon" id="invert"></i>
                    <br />
                </div>
                <div class="col-12">
                    <i class="fa fa-share panel-icon" id="rotate_right"></i>
                    <br />
                </div>
                <div class="col-12">
                    <i class="fa fa-chain-broken panel-icon" id="mirror"></i>
                    <br />
                </div>
                <div class="col-12">
                    <i class="fa fa-plus-square panel-icon" id="scale_plus" aria-hidden="true">
                    </i>
                    <br />
                </div>
                <div class="col-12">
                    <i class="fa fa-minus-square panel-icon" id="scale_minus" aria-hidden="true">
                    </i>
                    <br />
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="btn btn-primary " id="add-photo">
                Adaugă foto <i class="fa fa-plus"></i>
            </div>
            <br />
            <br />
            <div class="btn" style="background-color:lawngreen" id="slide-show">
                Start Show  <i class="fa fa-picture-o" aria-hidden="true"></i>
            </div>
            <br />
            <br />
            <div class="btn " style="background-color:cornflowerblue" id="save">
                Salvare img  <i class="fa fa-download" aria-hidden="true"></i>
            </div>
        </div>
    </div>

    <div class="row" id="colors" style="margin-top:10px">
        <div class="col-5"></div>
        <div class="col-4">
            <div class="color-pen" id="black" style="background-color:black;"></div>
            <div class="color-pen" id="blue" style="background-color:blue;"></div>
            <div class="color-pen" id="red" style="background-color:red;"></div>
            <div class="color-pen" id="yellow" style="background-color:yellow;"></div>
            <div class="color-pen" id="green" style="background-color:green;"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="thumbnails" id="thumbnails">
            </div>
        </div>
        <div class="col-3"></div>
    </div>
    
